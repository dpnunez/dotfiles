format = """
$username\
$directory\
$line_break\
$character\
"""

right_format = """
$git_branch\
$git_status\
$nodejs\
"""

[character]
success_symbol = "[➜](bold #31748f)"
error_symbol = "[➜](bold #eb6f92)"

[username]
show_always = true
style_user = "#eb6f92 bold"
format = '[ $user]($style) '
disabled = false

[directory]
format = '[in ](#524f67)[󰝰 $path ]($style)[$read_only]($read_only_style)'
read_only_style = ""
style = "#9ccfd8 bold"
truncation_length = 1
truncation_symbol = '' 

[git_branch]
symbol = ''
style = "bold rgb(127, 229, 209)"
truncation_symbol = ''
format = '[$symbol$branch(:$remote_branch)]($style) '

[git_status]
style = "bold #524f67"

[nodejs]
format = "[node $version]($style) "
style = "#9ccfd8 bold"